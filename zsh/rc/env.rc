#environement variables
export HISTFILE=$HOME/.zhistory
export HISTSIZE=1024
export SAVEHIST=8192

if [ -z $LANG ]; then
    if [[ $TERM =~ $wchar_prompt ]]; then
        export LANG="ja_JP.UTF-8"
    else
        export LANG="C"
    fi
fi
