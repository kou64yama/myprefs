alias ls='ls --color=auto'
alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'

local date='%F{blue}%D %T%f'

if [ $USER = 'root' ]; then
    PROMPT='%F{red}%n %#%f '
else
    PROMPT='%F{green}%n %#%f '
fi

RPROMPT='['$date']'
PROMPT2='%F{blue}%_>%f '
